set $Locker blurlock

set $mode_system System (l)ock, (e) logout, (s)uspend, (h)ibernate, (r)eboot, (S)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend && $Locker, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+n mode "$mode_system"

# Manual display management 
# Set the shortcuts and what they do
set $display_toggle $HOME/code/scripts/display_toggle.sh

set $mode_display Screen (e) eDP1 toggle, (h) HDMI1 toggle, (c) switch display
mode "$mode_display" {
    bindsym e exec xrandr --listactivemonitors | grep eDP1 >/dev/null && xrandr --output eDP1 --off || xrandr --output eDP1 --left-of HDMI1 --mode 1920x1080 #&& --no-startup-id sh $polybar #&& $wallpaper
    bindsym h exec xrandr --listactivemonitors | grep HDMI1 >/dev/null && xrandr --output HDMI1 --off || xrandr --output HDMI1 --right-of eDP1 #--mode 1680x1050 #&& --no-startup-id sh $polybar #&& $wallpaper
    bindsym c exec --no-startup-id sh $display_toggle && $wallpaper; mode "default" 
    #bindsym c exec xrandr --listactivemonitors | grep HDMI1 >/dev/null && xrandr --output HDMI1 --off --output eDP1 --mode 1920x1080 || xrandr --output eDP1 --off --output HDMI1 --mode 1680x1050 ; exec --no-startup-id sh $polybar ; exec --no-startup-id sleep 1 && $wallpaper

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

